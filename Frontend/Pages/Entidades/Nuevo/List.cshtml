@page
@model Frontend.Pages.NuevoListModel
@{
}


<div class="row">
    <div class="col-10">
        <h1>Clientes</h1>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Crear" asp-page="./Edit">
            <i class="fas fa-plus"></i>
        </a>
    </div>
</div>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <<th>Id</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Proveedor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var r in Model.Nuevos)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Modelo</td>
                <td>@r.Marca</td>
                <td>@r.Proveedor</td>
                <td>
                    <a class="btn btn-primary table-btn" data-toggle="tooltip" data-placement="top" title="Ver" asp-page="./Detail" asp-route-nuevoId="@r.Id">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-primary table-btn" data-toggle="tooltip" data-placement="top" title="Editar" asp-page="./Edit" asp-route-nuevoId="@r.Id">
                        <i class="fas fa-edit" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-danger table-btn" data-toggle="modal" data-target="#m-@r.Id">
                        <i class="fas fa-trash" data-toggle="tooltip" data-placement="top" title="Eliminar"></i>
                    </a>
                </td>
            </tr>
            <div class="modal fade" id="m-@r.Id" tabindex="-1" role="dialog" aria-labelledby="m-@r.Id" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="m-@r.Id">Confirmación</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Desea eliminar este registro: @r.Modelo</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Eliminar" asp-page="./List" asp-route-rolId="@r.Id">
                                Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

